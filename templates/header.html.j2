<!DOCTYPE html>
<html lang="en">
	<head>
		{% set website_info = execute_query("SELECT * FROM settings")[0] %}
		
		<title>{{ active_webpage + " | " + website_info["website_name"] }}</title>
		<meta charset="utf-8">
	    <meta name="desc" content="{{ website_info['website_description'] }}">
	    <meta name="author" content="{{ website_info['author'] }}">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <!-- CSS, Fonts, Links -->
	    <link rel="profile" href="https://gmpg.org/xfn/11">
	    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400">
	    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
	</head>
	<body class="preload">
		<div class="container">
			{% block body %}{% endblock %}
		</div>
		<!-- JS Scripts -->
		<script type="text/javascript" src="{{ url_for('static', filename='js/min/jquery-3.2.1.min.js') }}"></script>
		{% if active_webpage == "Dashboard" or active_webpage == "Login" %}
			<script type="text/javascript" src=" {{ url_for('static', filename='js/moonbow.js') }} "></script>
		{% else %}
			<script type="text/javascript" src=" {{ url_for('static', filename='js/theme.js') }} "></script>
		{% endif %}
	</body>
</html>